{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "types": ["jest", "node"]
    },

    "include": [
      "src/**/*.ts",     
      "src/test/**/*.ts"  
    ],
    "exclude": [
      "node_modules",
      "dist",
      "jest.config.js"
    ]
  }
