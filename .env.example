DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=
DB_DATABASE=logique
NODE_ENV=development
# Enable TypeORM SQL logging (true/false)
# Set to true for debugging, false for production
DB_LOG=false

# Enable database schema synchronization (true/false)
# WARNING: Setting synchronize to true can cause data loss in production!
# Only use true during development or for simple prototyping.
# Use TypeORM migrations for production environments.
DB_SYNC=true

# Database Connection Pool Size
# Number of connections to keep open
DB_POOL_SIZE=10

PORT=3000

